---
// Import components
import Hero from '../components/hero/Hero.jsx';
import CategoriesSection from '../components/categories/CategoriesSection.jsx';
import AboutSection from '../components/about/AboutSection.jsx';
import ConsultationForm from '../components/forms/ConsultationForm.jsx';
import Footer from '../components/footer/Footer.jsx';
import FloatingWhatsAppButton from '../components/whatsapp/FloatingWhatsAppButton.jsx';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<!-- Meta tags básicos -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta tags -->
		<title>Portal de Negocios - Te buscamos la mejor opción para tu inversión</title>
		<meta name="description" content="Servicios financieros especializados. Te ayudamos a encontrar las mejores oportunidades de inversión y compra. Optimizamos cada inversión para maximizar el valor obtenido." />
		<meta name="keywords" content="servicios financieros, inversiones, compras, maquinarias, rodados, herramientas, neumáticos, materiales construcción, instalaciones, tecnología, equipamiento" />
		<meta name="author" content="Portal de Negocios" />
		
		<!-- Open Graph Meta tags -->
		<meta property="og:title" content="Portal de Negocios - Servicios Financieros" />
		<meta property="og:description" content="Te buscamos la mejor opción para tu inversión o compra. Trabajamos en colaboración con Grupo Alpes." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://portal-de-negocios.com" />
		<meta property="og:image" content="/og-image.jpg" />
		<meta property="og:locale" content="es_AR" />
		
		<!-- Twitter Card Meta tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Portal de Negocios - Servicios Financieros" />
		<meta name="twitter:description" content="Te buscamos la mejor opción para tu inversión o compra." />
		<meta name="twitter:image" content="/twitter-card.jpg" />
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		
		<!-- Preconnect para performance -->
		<link rel="preconnect" href="https://images.unsplash.com" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Google Fonts -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://portal-de-negocios.com" />
		
		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Portal de Negocios",
			"description": "Servicios financieros especializados. Te ayudamos a encontrar las mejores oportunidades de inversión y compra.",
			"url": "https://portal-de-negocios.com",
			"logo": "https://portal-de-negocios.com/logo.png",
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+5492923530179",
				"contactType": "customer service",
				"areaServed": "AR",
				"availableLanguage": "Spanish"
			},
			"address": {
				"@type": "PostalAddress",
				"addressCountry": "AR"
			},
			"sameAs": [
				"https://wa.me/5492923530179"
			]
		}
		</script>
		
		<!-- Global Styles -->
		<style>
			/* CSS Reset y estilos globales */
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}
			
			html {
				scroll-behavior: smooth;
				font-size: 16px;
			}
			
			body {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				line-height: 1.6;
				color: #1a202c;
				background-color: #ffffff;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}
			
			/* Accesibilidad */
			:focus {
				outline: 2px solid #123142;
				outline-offset: 2px;
			}
			
			/* Reducir movimiento para usuarios que lo prefieren */
			@media (prefers-reduced-motion: reduce) {
				* {
					animation-duration: 0.01ms !important;
					animation-iteration-count: 1 !important;
					transition-duration: 0.01ms !important;
					scroll-behavior: auto !important;
				}
			}
			
			/* Modo oscuro */
			@media (prefers-color-scheme: dark) {
				:root {
					color-scheme: dark;
				}
			}
			
			/* Scrollbar personalizada */
			::-webkit-scrollbar {
				width: 8px;
			}
			
			::-webkit-scrollbar-track {
				background: #f1f5f9;
			}
			
			::-webkit-scrollbar-thumb {
				background: #cbd5e1;
				border-radius: 4px;
			}
			
			::-webkit-scrollbar-thumb:hover {
				background: #94a3b8;
			}
			
			/* Utilities */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 20px;
			}
			
			.sr-only {
				position: absolute;
				width: 1px;
				height: 1px;
				padding: 0;
				margin: -1px;
				overflow: hidden;
				clip: rect(0, 0, 0, 0);
				white-space: nowrap;
				border: 0;
			}
		</style>
	</head>
	<body>
		<!-- Skip to main content para accesibilidad -->
		<a href="#main-content" class="sr-only">Saltar al contenido principal</a>
		
		<!-- Main content -->
		<main id="main-content">
			<!-- Hero Section -->
			<Hero client:load />
				<!-- Consultation Form -->
			<ConsultationForm client:load />
			<!-- Categories Section -->
			<CategoriesSection client:load />
			
			<!-- About Section -->
			<AboutSection client:load />
				<!-- Consultation Form -->
			<ConsultationForm client:load />
			
		
		</main>
		
		<!-- Footer -->
		<Footer client:load />
		
		<!-- Floating WhatsApp Button -->
		<FloatingWhatsAppButton client:load />
		
		<!-- Scripts adicionales -->
		<script>
			// Google Analytics (reemplaza GA_MEASUREMENT_ID con tu ID real)
			// window.dataLayer = window.dataLayer || [];
			// function gtag(){dataLayer.push(arguments);}
			// gtag('js', new Date());
			// gtag('config', 'GA_MEASUREMENT_ID');
			
			// Service Worker para PWA (opcional)
			// if ('serviceWorker' in navigator) {
			//   navigator.serviceWorker.register('/sw.js');
			// }
			
			// Performance monitoring
			window.addEventListener('load', () => {
				// Log performance metrics
				const perfData = performance.getEntriesByType('navigation')[0];
				console.log('Page Load Time:', perfData.loadEventEnd - perfData.loadEventStart, 'ms');
			});
			
			// Error handling
			window.addEventListener('error', (e) => {
				console.error('JavaScript Error:', e.error);
				// Aquí podrías enviar errores a un servicio de monitoreo
			});
		</script>
	</body>
</html>
