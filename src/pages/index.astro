---
// Import components
import Hero from '../components/hero/Hero.jsx';
import CategoriesSection from '../components/categories/CategoriesSection.jsx';
import AboutSection from '../components/about/AboutSection.jsx';
import ConsultationForm from '../components/forms/ConsultationForm.jsx';
import Footer from '../components/footer/Footer.jsx';
import FloatingWhatsAppButton from '../components/whatsapp/FloatingWhatsAppButton.jsx';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<!-- Meta tags básicos -->
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- SEO Meta tags -->
		<title>Portal de Negocios | Servicios Financieros y Gestión de Inversiones en Argentina</title>
		<meta name="description" content="Expertos en servicios financieros. Te ayudamos a encontrar las mejores opciones para tu inversión en maquinarias, rodados, herramientas y equipamiento. Asesoramiento profesional y personalizado." />
		<meta name="keywords" content="servicios financieros Argentina, inversiones empresariales, compra maquinarias, rodados comerciales, herramientas industriales, neumáticos, materiales construcción, equipamiento tecnológico, asesoramiento financiero, gestión de inversiones" />
		<meta name="author" content="Portal de Negocios" />
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#123142" />
		
		<!-- Open Graph Meta tags -->
		<meta property="og:title" content="Portal de Negocios | Servicios Financieros y Gestión de Inversiones" />
		<meta property="og:description" content="Expertos en asesoramiento financiero. Te ayudamos a encontrar las mejores opciones para tu inversión empresarial. Trabajamos en colaboración con Grupo Alpes." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://portal-de-negocios.com" />
		<meta property="og:image" content="https://portal-de-negocios.com/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Portal de Negocios" />
		<meta property="og:locale" content="es_AR" />
		
		<!-- Twitter Card Meta tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Portal de Negocios | Servicios Financieros" />
		<meta name="twitter:description" content="Expertos en asesoramiento financiero y gestión de inversiones empresariales en Argentina." />
		<meta name="twitter:image" content="https://portal-de-negocios.com/twitter-card.jpg" />
		
		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />
		
		<!-- Preconnect para performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Google Fonts optimizado -->
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
		
		<!-- Canonical URL -->
		<link rel="canonical" href="https://portal-de-negocios.com" />
		
		<!-- Structured Data (JSON-LD) -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "FinancialService",
			"name": "Portal de Negocios",
			"description": "Servicios financieros especializados y asesoramiento para inversiones empresariales. Expertos en gestión de compras de maquinarias, rodados, herramientas y equipamiento.",
			"url": "https://portal-de-negocios.com",
			"logo": "https://portal-de-negocios.com/logo.png",
			"image": "https://portal-de-negocios.com/og-image.jpg",
			"priceRange": "$$",
			"telephone": "+5492923530179",
			"areaServed": {
				"@type": "Country",
				"name": "Argentina"
			},
			"address": {
				"@type": "PostalAddress",
				"addressCountry": "AR"
			},
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+5492923530179",
				"contactType": "customer service",
				"areaServed": "AR",
				"availableLanguage": ["Spanish"],
				"contactOption": "TollFree"
			},
			"hasOfferCatalog": {
				"@type": "OfferCatalog",
				"name": "Servicios Financieros",
				"itemListElement": [
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Asesoramiento en Inversiones",
							"description": "Gestión y asesoramiento para inversiones empresariales"
						}
					},
					{
						"@type": "Offer",
						"itemOffered": {
							"@type": "Service",
							"name": "Gestión de Compras",
							"description": "Búsqueda y gestión de compras de maquinarias, rodados y equipamiento"
						}
					}
				]
			},
			"sameAs": [
				"https://wa.me/5492923530179"
			]
		}
		</script>
		
		<!-- Global Styles -->
		<style>
			/* CSS Reset y estilos globales */
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}
			
			html {
				scroll-behavior: smooth;
				font-size: 16px;
			}
			
			body {
				font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				line-height: 1.6;
				color: #1a202c;
				background-color: #ffffff;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}
			
			/* Accesibilidad */
			:focus {
				outline: 2px solid #123142;
				outline-offset: 2px;
			}
			
			/* Reducir movimiento para usuarios que lo prefieren */
			@media (prefers-reduced-motion: reduce) {
				*,
				*::before,
				*::after {
					animation-duration: 0.01ms !important;
					animation-iteration-count: 1 !important;
					transition-duration: 0.01ms !important;
					scroll-behavior: auto !important;
				}
			}
			
			/* Scrollbar personalizada */
			::-webkit-scrollbar {
				width: 8px;
			}
			
			::-webkit-scrollbar-track {
				background: #f1f5f9;
			}
			
			::-webkit-scrollbar-thumb {
				background: #cbd5e1;
				border-radius: 4px;
			}
			
			::-webkit-scrollbar-thumb:hover {
				background: #94a3b8;
			}
			
			/* Utilities */
			.container {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 20px;
			}
			
			.sr-only {
				position: absolute;
				width: 1px;
				height: 1px;
				padding: 0;
				margin: -1px;
				overflow: hidden;
				clip: rect(0, 0, 0, 0);
				white-space: nowrap;
				border: 0;
			}
		</style>
	</head>
	<body>
		<!-- Skip to main content para accesibilidad -->
		<a href="#main-content" class="sr-only">Saltar al contenido principal</a>
		
		<!-- Main content -->
		<main id="main-content">
			<!-- Hero Section -->
			<section aria-label="Presentación principal">
				<Hero client:load />
			</section>
			
			<!-- Categories Section -->
			<section aria-label="Categorías de servicios">
				<CategoriesSection client:load />
			</section>
			
			<!-- About Section -->
			<section aria-label="Sobre nosotros">
				<AboutSection client:load />
			</section>
			
			<!-- Consultation Form -->
			<section aria-label="Formulario de consulta">
				<ConsultationForm client:load />
			</section>
		</main>
		
		<!-- Footer -->
		<Footer client:load />
		
		<!-- Floating WhatsApp Button -->
		<FloatingWhatsAppButton client:load />
		
		<!-- Analytics placeholder -->
		<!-- Descomentar y configurar cuando tengas un ID de Google Analytics
		<script async src="https://www.googletagmanager.com/gtag/js?id=GA_MEASUREMENT_ID"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'GA_MEASUREMENT_ID');
		</script>
		-->
	</body>
</html>
